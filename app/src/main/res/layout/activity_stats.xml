<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <ImageView
        android:contentDescription="@string/background_image"
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/friends_banner" />

    <TableLayout
        android:id="@+id/tab_lay_stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="24dp"
        android:showDividers="middle"
        android:shrinkColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TableRow
            android:id="@+id/header_stats"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_stats_header_name"
                android:layout_weight="1"
                android:text="@string/player_name_text"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_header_points"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/points"
                android:textAlignment="center"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_stats_first_player_name"
                android:layout_weight="1"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_first_player_points"
                android:layout_weight="1"

                android:textAlignment="center"
                android:text="@string/zero"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_stats_second_player_name"
                android:layout_weight="1"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_second_player_points"
                android:layout_weight="1"

                android:textAlignment="center"
                android:text="@string/zero"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_stats_third_player_name"
                android:layout_weight="1"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_third_player_points"
                android:layout_weight="1"

                android:textAlignment="center"
                android:text="@string/zero"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_stats_fourth_player_name"
                android:layout_weight="1"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_fourth_player_points"
                android:layout_weight="1"

                android:textAlignment="center"
                android:text="@string/zero"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_stats_fifth_player_name"
                android:layout_weight="1"
                android:text="@string/player_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_stats_fifth_player_points"
                android:layout_weight="1"

                android:textAlignment="center"
                android:text="@string/zero"
                android:textSize="24sp" />

        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>