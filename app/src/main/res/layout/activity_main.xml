<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youngdredstudios.friends_whodidit.MainActivity">

    <ImageView
        android:id="@+id/iv_main_background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fountain" />

    <Button
        android:id="@+id/btn_main_play_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/play_game"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_leaderboard"
        app:layout_constraintStart_toStartOf="@+id/btn_main_leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_game_title" />

    <Button
        android:id="@+id/btn_main_leaderboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/leaderboard"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_achievement"
        app:layout_constraintStart_toStartOf="@+id/btn_main_achievement"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_play_game" />

    <Button
        android:id="@+id/btn_main_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/stats"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_leaderboard"
        app:layout_constraintStart_toStartOf="@+id/btn_main_leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_leaderboard" />

    <Button
        android:id="@+id/btn_main_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/achievements"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_stats" />

    <TextView
        android:id="@+id/tv_main_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/app_name"
        android:textColor="#FDFDFD"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>